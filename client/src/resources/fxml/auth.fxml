<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="140.0" prefWidth="400.0" spacing="5" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.gb.storage.client.fxFiles.AuthenticationController">
    <Label text="Login" />
    <TextField fx:id="login" />
    <Label text="Password" />
    <PasswordField fx:id="password" />
    <HBox alignment="CENTER_RIGHT" prefHeight="31.0" prefWidth="400.0" spacing="5.0">
        <opaqueInsets>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </opaqueInsets>
        <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
        </padding>
        <Button fx:id="authButton" text="Connect" onAction="#btnAuth" />
        <Button fx:id="cancelButton" text="Cancel" onAction="#bthCancel"/>
    </HBox>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
